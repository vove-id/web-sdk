    "compilerOptions": {
      "noImplicitAny": true,
      "outDir": "build/types",
      "module": "es6",
      "target": "es5",
      "allowJs": false,
      "sourceMap": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "lib": ["es6", "dom"],
      "moduleResolution": "node",
